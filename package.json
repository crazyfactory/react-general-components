{
  "name": "ts-react-boilerplate",
  "description": "A universal boilerplate for building web applications w/ TypeScript, React, Redux and more.",
  "main": "build/server.js",
  "config": {
    "validate-commit-msg": {
      "types": [
        "build",
        "chore",
        "ci",
        "cleanup",
        "docs",
        "feat",
        "fix",
        "followup",
        "improve",
        "perf",
        "refactor",
        "revert",
        "style",
        "test",
        "unfeat"
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "scripts": {
    "prepush": "npm run build && npm run build:prod && npm run test:no-cache",
    "commitmsg": "validate-commit-msg",
    "clean": "rimraf build && rimraf .jest/cache",
    "prebuild": "npm run clean -s",
    "build": "webpack --config config/webpack/index.js",
    "build:prod": "cross-env NODE_ENV=production npm run build && node ./config/utils/replaceWithProdScripts",
    "postbuild": "webpack --config config/webpack/server.js",
    "prestart": "npm run build -s",
    "start": "node build/server.js",
    "start:prod": "npm run build:prod && cross-env NODE_ENV=production node build/server.js",
    "test": "jest",
    "test:no-cache": "jest --no-cache",
    "test:watch": "jest --watch",
    "lint": "eslint \"src/**/**.ts*\"",
    "lint:fix": "npm run lint -s -- --fix",
    "doc": "start-storybook -p 6060"
  },
  "author": "Crazy Factory <dev@crazy-factory.com>",
  "homepage": "https://github.com/crazyfactory/ts-react-boilerplate.git",
  "repository": {
    "type": "git",
    "url": "https://github.com/crazyfactory/ts-react-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/crazyfactory/ts-react-boilerplate/issues"
  },
  "keywords": [
    "react",
    "redux",
    "typescript",
    "webpack",
    "universal",
    "isomorphic",
    "starter",
    "kit",
    "boilerplate",
    "hot reload",
    "react-hot-loader",
    "enzyme",
    "jest"
  ],
  "license": "MIT",
  "devDependencies": {
    "@crazyfactory/tslint-rules": "^1.6.1",
    "@storybook/addon-docs": "^5.3.0-alpha.3",
    "@storybook/react": "^5.2.1",
    "@types/enzyme": "^3.10.3",
    "@types/jest": "^24.0.18",
    "@types/prop-types": "^15.7.2",
    "@types/react": "^16.9.2",
    "@types/storybook__react": "^4.0.2",
    "@typescript-eslint/eslint-plugin": "^2.3.0",
    "@typescript-eslint/eslint-plugin-tslint": "^2.3.0",
    "@typescript-eslint/parser": "^2.3.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.0.6",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "eslint": "^6.4.0",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "jest-enzyme": "^7.1.1",
    "react": "^16.9.0",
    "react-docgen-typescript-loader": "^3.2.1",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.1.2",
    "tslint": "^5.20.0",
    "tslint-microsoft-contrib": "^6.2.0",
    "tslint-react": "^4.1.0",
    "typescript": "^3.6.3",
    "validate-commit-msg": "^2.14.0"
  },
  "dependencies": {
    "autobind-decorator": "^2.4.0",
    "prop-types": "^15.7.2",
    "typestyle": "^2.0.4"
  },
  "peerDependencies": {
    "react": "^16.1.1"
  },
  "jest": {
    "preset": "ts-jest",
    "cacheDirectory": "<rootDir>/.jest/cache",
    "collectCoverage": true,
    "coverageDirectory": "<rootDir>/coverage",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "moduleDirectories": [
      "node_modules",
      "./"
    ],
    "setupFilesAfterEnv": [
      "./src/app/helpers/JestBootstrap.ts"
    ]
  }
}
